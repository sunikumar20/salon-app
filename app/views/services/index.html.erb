<p id="notice"><%= notice %></p>

<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Price</th>
      <th>Salon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.description %></td>
        <td><%= service.duration %></td>
        <td><%= service.price %></td>
        <td><%= service.salon_id %></td>
        <td><%= link_to 'Show', salon_service_path(@salon, service) %></td>
        <td><%= link_to 'Edit', edit_salon_service_path(@salon, service) %></td>
        <td><%= link_to 'Destroy', [@salon, service], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

