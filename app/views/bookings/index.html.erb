<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.total_price %></td>
        <td><%= link_to 'Show', [booking.salon, booking] %></td>
        <td><%= link_to 'Edit', edit_salon_booking_path(booking.salon, booking) %></td>
        <td><%= link_to 'Destroy', [booking.salon, booking], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td>
          <%= render 'form', booking: booking, service_ids: booking.service_ids  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_salon_booking_path %>
